    "version": "0.2.0",
    "configurations": [
        {
            "name": "Rails server",
            "type": "Ruby",
            "request": "launch",
            "program": "${workspaceRoot}/bin/rails",
            "useBundler": true,
            "args": [
                "server",
                "-b",
                "0.0.0.0",
                "-p",
                "4000"
            ]
        },
        {
            "name": "Redmine plugins test",
            "type": "Ruby",
            "request": "launch",
            "program": "${workspaceRoot}/bin/rake",
            "useBundler": true,
            "args": [
                "redmine:plugins:test"
            ],
            "env": {
                "RAILS_ENV": "test"
            }
        }
    ]
}